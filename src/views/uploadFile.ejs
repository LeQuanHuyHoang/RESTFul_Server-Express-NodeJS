<h1>Upload file</h1>

<div class="upload-file-container">
    <form method="POST" action="/upload-profile-pic" enctype="multipart/form-data">
       <div>
        <label>Avatar:</label>
        <input type="file" name="profile-pic">
       </div>
        <div>
            <button class='btn-save' type="submit" name="btn-upload-file">Save file</button>
        </div>
    </form>
</div>

<div class="upload-file-container">
    <form method="POST" action="/upload-multiple-pic" enctype="multipart/form-data">
        <div>
            <label>Picture:</label>
            <input type="file" name="multiple-profile-pic" multiple>
        </div>
        <div>
            <button class='btn-save' type="submit" name="btn-upload-multiple-file">Save file</button>
        </div>
    </form>
</div>


</body>
</html>